<Window x:Class="Test.Email"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Test"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Email" Height="450" Width="800">
    <Grid>
        
        <Label Content="发件人邮箱:" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top"/>
        <TextBox Text="3290158038@qq.com" x:Name="FromEmailTextBox" HorizontalAlignment="Left" Height="23" Margin="120,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>

        <Label Content="发件人密码:" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top"/>
        <PasswordBox Password="uyfvzrlrtxdqcjhh" x:Name="PasswordTextBox" HorizontalAlignment="Left" Height="23" Margin="120,60,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="收件人邮箱:" HorizontalAlignment="Left" Margin="20,100,0,0" VerticalAlignment="Top"/>
        <TextBox Text="3290158038@qq.com" x:Name="ToEmailTextBox" HorizontalAlignment="Left" Height="23" Margin="120,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>

        <Label Content="邮件主题:" HorizontalAlignment="Left" Margin="20,140,0,0" VerticalAlignment="Top"/>
        <TextBox Text="你好" x:Name="SubjectTextBox" HorizontalAlignment="Left" Height="23" Margin="120,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Label Content="邮件正文:" HorizontalAlignment="Left" Margin="20,180,0,0" VerticalAlignment="Top"/>
        <TextBox Text="Hello World" x:Name="BodyTextBox" HorizontalAlignment="Left" Height="150" Margin="20,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="760"/>

        <Button Content="发送邮件" HorizontalAlignment="Left" Margin="360,380,0,0" VerticalAlignment="Top" Width="75" Click="SendButton_Click"/>
    </Grid>
</Window>
