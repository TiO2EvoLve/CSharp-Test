<Window x:Class="Test.文件修改测试"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="文件修改测试" Height="500" Width="500"
        Background="#FFF7F7F7"
        WindowStartupLocation="CenterScreen">
    <Border BorderBrush="#FFE0E0E0" BorderThickness="1.5" CornerRadius="12" Margin="20" Background="White">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 通用控件行 -->
            <Grid Grid.Row="0" Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="UI" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <CheckBox Grid.Column="1" IsChecked="{Binding Ui}" VerticalAlignment="Center"/>
            </Grid>

            <Grid Grid.Row="1" Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="35"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Volume" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <Slider Grid.Column="1" Value="{Binding Volume}" Minimum="0" Maximum="100"
                        VerticalAlignment="Center"
                        TickFrequency="1" IsSnapToTickEnabled="True"/>
                <TextBlock Grid.Column="2" Text="{Binding Volume}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>

            <Grid Grid.Row="2" Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="35"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Pitch" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <Slider Grid.Column="1" Value="{Binding Pitch}" Minimum="0" Maximum="200"
                        VerticalAlignment="Center"
                        TickFrequency="1" IsSnapToTickEnabled="True"/>
                <TextBlock Grid.Column="2" Text="{Binding Pitch}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>

            <Grid Grid.Row="3" Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Loop" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <CheckBox Grid.Column="1" IsChecked="{Binding Loop}" VerticalAlignment="Center"/>
            </Grid>

            <Grid Grid.Row="4" Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Mode" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="1" ItemsSource="{Binding Modes}" 
                          SelectedItem="{Binding Mode, Mode=TwoWay}">
                </ComboBox>
            </Grid>

            <Grid Grid.Row="5" Margin="0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Sounds" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" Text="{Binding Sounds}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <Button Click="SelectFile" Grid.Column="2" Content="选择" Padding="10,2" VerticalAlignment="Center"/>
            </Grid>

            <!-- 保存按钮 -->
            <Button Grid.Row="6" HorizontalAlignment="Center" Margin="0,30,0,0"
                       Width="120" Height="36"
                       Background="#409EFF"
                       Foreground="White"
                       FontWeight="Bold"
                       Content="保存文件"
                       Click="SaveFile"/>
            <Button Grid.Row="7" HorizontalAlignment="Center" Margin="0,10,0,0"
                    Width="120" Height="36"
                    Background="#67C23A"
                    Foreground="White"
                    FontWeight="Bold"
                    Content="打开文件"
                    Click="OpenFile"/>
        </Grid>
    </Border>
</Window>
