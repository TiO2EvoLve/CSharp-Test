<Window x:Class="Test.Page.响应式"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="响应式" Height="500" Width="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="StartButton" Content="开始倒计时" Width="120" Height="40" Margin="0,0,0,10"/>
            <TextBlock x:Name="TimerText" FontSize="24" TextAlignment="Center"/>
        </StackPanel>
        
        <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <TextBox x:Name="SearchBox" Height="30" Width="200" Margin="0,0,0,10"/>
            <ListBox x:Name="ResultList" Height="100" Width="200"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <WrapPanel HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button x:Name="ButtonA" Content="按钮 A" Width="80" Margin="5"/>
                <Button x:Name="ButtonB" Content="按钮 B" Width="80" Margin="5"/>
                <Button x:Name="ButtonC" Content="按钮 C" Width="80" Margin="5"/>
            </WrapPanel>
            <TextBox x:Name="LogBox" Height="150" 
                     VerticalScrollBarVisibility="Auto"
                     IsReadOnly="True" TextWrapping="Wrap"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
            <Button x:Name="StartButton1" Content="开始测试" Width="100" Height="35" Margin="0,0,0,10"/>
            <TextBox x:Name="LogBox1" Height="150" 
                     VerticalScrollBarVisibility="Auto"
                     IsReadOnly="True" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
