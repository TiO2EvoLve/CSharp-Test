<Window x:Class="Test.Page.状态机测试"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="状态机测试" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 左侧：状态控制面板 -->
        <GroupBox Header="状态控制" Grid.Column="0" Margin="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- 当前状态显示 -->
                <Border Width="150" Height="150" CornerRadius="75"
                        Background="{Binding BulbColor, UpdateSourceTrigger=PropertyChanged}"
                        BorderBrush="Gray" BorderThickness="2"
                        Margin="0,0,0,20">
                    <TextBlock Text="{Binding CurrentState}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16" FontWeight="Bold"
                               Foreground="White" />
                </Border>

                <TextBlock Text="{Binding StatusMessage}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           FontSize="14" />

                <!-- 触发器按钮 -->
                <StackPanel>
                    <Button Content="打开开关"
                            Command="{Binding TurnOnCommand}"
                            Margin="0,5" Padding="10,5"
                            IsEnabled="{Binding CanTurnOn}" />
                    <Button Content="关闭开关"
                            Command="{Binding TurnOffCommand}"
                            Margin="0,5" Padding="10,5"
                            IsEnabled="{Binding CanTurnOff}" />
                    <Button Content="按下开关"
                            Command="{Binding ToggleCommand}"
                            Margin="0,5" Padding="10,5"
                            IsEnabled="{Binding CanToggle}" />
                    <Button Content="切换模式"
                            Command="{Binding SwitchModeCommand}"
                            Margin="0,5" Padding="10,5"
                            IsEnabled="{Binding CanSwitchMode}" />
                    <Button Content="重置"
                            Command="{Binding ResetCommand}"
                            Margin="0,20,0,0" Padding="10,5"
                            Background="LightGray" />
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- 中间分隔线 -->
        <GridSplitter Grid.Column="1" Width="3" HorizontalAlignment="Center" />

        <!-- 右侧：状态图和信息 -->
        <GroupBox Header="状态信息" Grid.Column="2" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- 状态信息 -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="允许的触发器:" FontWeight="Bold" Margin="0,0,0,5" />
                    <TextBlock Text="{Binding AvailableTriggers}" TextWrapping="Wrap" />

                    <TextBlock Text="状态历史:" FontWeight="Bold" Margin="0,20,0,5" />
                    <ScrollViewer Height="100" BorderBrush="LightGray" BorderThickness="1">
                        <ItemsControl ItemsSource="{Binding StateHistory}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Margin="2" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>

                <!-- 状态图显示 -->
                <Border Grid.Row="1" Margin="0,20,0,0"
                        BorderBrush="LightGray" BorderThickness="1"
                        Background="White">
                    <Image Source="{Binding StateDiagramImage}"
                           Stretch="Uniform" />
                </Border>

                <!-- 状态图操作 -->
                <StackPanel Grid.Row="2" Orientation="Horizontal"
                            HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="生成状态图"
                            Command="{Binding GenerateDiagramCommand}"
                            Margin="0,0,5,0" Padding="10,5" />
                    <Button Content="导出状态图"
                            Command="{Binding ExportDiagramCommand}"
                            Padding="10,5" />
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>